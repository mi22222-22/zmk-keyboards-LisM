#include "non_trackball.overlay"

// 左（split経由）のリスナーを有効化
&left_listener {
    status = "okay";
    device = <&left_split>;  // 左トラックボールを参照

    scroller {
        layers = <2>;
        input-processors = 
            <&zip_xy_to_scroll_mapper>,
            <&zip_invert_x>,
            <&zip_invert_y>,
            <&zip_scroll_scaler 1 16>;
    };
};